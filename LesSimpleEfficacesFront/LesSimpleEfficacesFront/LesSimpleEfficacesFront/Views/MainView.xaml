<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LesSimpleEfficacesFront.Views.MainView">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Menu" HorizontalOptions="CenterAndExpand" />
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Button Grid.Row="0" Text="Commencer" BackgroundColor="#0099ff"  Command="{Binding RoutCommand}" />
                <Button Grid.Row="1" Text="Mes amis" BackgroundColor="#33cc33" Command="{Binding FriendCommand}" />
                <Button Grid.Row="2" Text="Mon groupe" BackgroundColor="#00cc99" Command="{Binding GroupCommand}" />
                <Button Grid.Row="3" Text="Mes statistiques" BackgroundColor="#ff9900" Command="{Binding StatCommand}" />
                <Button Grid.Row="4" Text="Mon Compte" BackgroundColor="#ff6666" Command="{Binding AccountCommand}" />

            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>