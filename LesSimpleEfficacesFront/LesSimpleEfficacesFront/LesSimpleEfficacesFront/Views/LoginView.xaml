<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LesSimpleEfficacesFront.Views.LoginView">
    <ContentPage.Content>
        <StackLayout Padding="20">
            <Label Text="Connexion" FontSize="20" />

            <Entry Placeholder="Login" Text="{Binding Login}" />
            <Entry Placeholder="Mot De Passe" Text="{Binding Password}" />

            <StackLayout Orientation="Horizontal">
                <Button Text="Connexion" Command="{Binding ConnectionCommand}"/>
                <Button Text="Inscription" Command="{Binding RegisterCommand}"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>